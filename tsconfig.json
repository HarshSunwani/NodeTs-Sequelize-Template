{
  "compilerOptions": {
    "target": "es2016",                           
    "module": "commonjs",
    "outDir": "build/dist",                               
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                                 
  },
  "include": [
    "src",
    "models",
    "src/server.ts",
    "config/config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
